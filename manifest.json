{
    "manifest_version": 2,
    "name": "Cel Dividers",
    "version": "1.0",

    "description": "Adds a context menu when right clicking on a tab that allows for stylization on a tab to visually distinguish itself from other tabs or organize multiple alike tabs visually.",
    "homepage_url": "https://github.com/Jay-Remm/Cel-Dividers",

    "icons": {
        "16": "icons/Cel_Dividers_16x16.png",
        "48": "icons/Cel_Dividers_48x48.png",
        "96": "icons/Cel_Dividers_96x96.png"
    },

    "permissions": [
        "tabs",
        "contextMenus",
        "menus",
        "activeTab",
        "theme"
    ],

    "browser_specific_settings": {
        "gecko": {
            "id": "CelDividers@example.com"
        }
    },

    "background": {
        "scripts": ["app.js"]
    }
}